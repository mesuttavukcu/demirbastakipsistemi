datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Location {
  assets       Asset[]
  createdAt    DateTime @default(now())
  description  String?
  id           String   @id @default(cuid())
  locationName String?
  updatedAt    DateTime @updatedAt
}

model Category {
  assets       Asset[]
  categoryName String?
  createdAt    DateTime @default(now())
  description  String?
  id           String   @id @default(cuid())
  updatedAt    DateTime @updatedAt
}

model Asset {
  assetCode          String?
  category           Category? @relation(fields: [categoryId], references: [id])
  categoryId         String?
  createdAt          DateTime  @default(now())
  currentValue       Float?
  depreciationPeriod Int?
  depreciationRate   Float?
  description        String?
  id                 String    @id @default(cuid())
  location           Location? @relation(fields: [locationId], references: [id])
  locationId         String?
  name               String?
  purchaseCost       Float?
  purchaseDate       DateTime?
  updatedAt          DateTime  @updatedAt
  user               User?     @relation(fields: [userId], references: [id])
  userId             String?
}

model User {
  assets    Asset[]
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
